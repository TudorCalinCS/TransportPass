<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OTPActivity">


    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/otp_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/otpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP VERIFICATION"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:layout_below="@id/iconImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please insert the code from your SMS!"
        android:textSize="16sp"
        android:layout_below="@id/otpTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textStyle="normal"/>


    <LinearLayout
        android:id="@+id/codeEditTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/instructionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">


        <EditText
            android:id="@+id/codeEditText1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:backgroundTint="@color/bby_blue"/>

        <EditText
            android:id="@+id/codeEditText2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:backgroundTint="@color/bby_blue"/>

        <EditText
            android:id="@+id/codeEditText3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:backgroundTint="@color/bby_blue"/>

        <EditText
            android:id="@+id/codeEditText4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:backgroundTint="@color/bby_blue"/>

    </LinearLayout>


    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeEditTextLayout"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:backgroundTint="@color/green"
        android:layout_marginTop="16dp"/>

    <!-- Did not receive a code? Resend code -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/didNotReceiveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did not receive a code?"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/resendCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/didNotReceiveTextView"
            android:layout_marginStart="8dp"
            android:text="Resend code"
            android:textColor="@color/green"
            android:textSize="16sp"/>
    </RelativeLayout>


</RelativeLayout>
